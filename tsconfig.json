{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,
        "pretty": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictFunctionTypes": false,
        "baseUrl": "src",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "lib": [
            "es2015.iterable",
            "es2015",
            "dom",
            "es2016.array.include"
        ]
    },
    "exclude": [
        "node_modules",
        "typings/globals",
        "typings/modules"
    ]
}